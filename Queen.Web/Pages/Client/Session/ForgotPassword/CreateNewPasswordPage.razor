@page "/CreateNewPassword"
@inherits CreateNewPasswordPageBase

<div class="center-contents">
    <div class="border border-4 border-dark rounded-3 shadow w-50 p-5 h-100 mx-auto">
        <div>
            <h3>New Password</h3>
        </div>
        <div class="mx-auto my-4">
            <input type="password" class="form-control" placeholder="New Password">
        </div>
        <div class="mx-auto mb-4">
            <input type="password" class="form-control" placeholder="Confirm Password">
        </div>
        <div class="d-grid mx-auto w-50 mt-4">
            <button class="btn btn-primary" @onclick="CreateNewPassword">Create New Password</button>
        </div>
    </div>
</div>

